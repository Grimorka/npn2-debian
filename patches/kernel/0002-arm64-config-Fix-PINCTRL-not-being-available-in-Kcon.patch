From: Chris Blake <chrisrblake93@gmail.com>
Date: Mon, 25 Jun 2018 08:43:26 -0500
Subject: [PATCH 2/8] arm64: config: Fix PINCTRL not being available in Kconfig
 on sun50i

Kangd from
https://github.com/megous/linux/commit/c949369b4d56c45ec95988d4743a2fc606b5c4fb
---
 arch/arm64/Kconfig.platforms | 7 +++++--
 1 file changed, 5 insertions(+), 2 deletions(-)

diff --git a/arch/arm64/Kconfig.platforms b/arch/arm64/Kconfig.platforms
index d5aeac3..1e78bdc 100644
--- a/arch/arm64/Kconfig.platforms
+++ b/arch/arm64/Kconfig.platforms
@@ -12,8 +12,11 @@ config ARCH_SUNXI
 	select GENERIC_IRQ_CHIP
 	select PINCTRL
 	select RESET_CONTROLLER
-	help
-	  This enables support for Allwinner sunxi based SoCs like the A64.
+	select PINCTRL_SUN50I_H5
+	select PINCTRL_SUN8I_H3_R
+ 	help
+	  This enables support for Allwinner sunxi based SoCs like the A64
+	  and H5.
 
 config ARCH_ALPINE
 	bool "Annapurna Labs Alpine platform"
